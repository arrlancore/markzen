{
  "manifest_version": 3,
  "name": "MarkZen",
  "version": "1.0.0",
  "description": "Visual bookmark management reimagined: Kanban boards, smart search, and serene new tabs",
  "permissions": ["storage", "tabs", "bookmarks", "scripting", "omnibox", "notifications", "activeTab"],
  "omnibox": { "keyword": "mz" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/images/icon16.png",
      "48": "assets/images/icon48.png",
      "128": "assets/images/icon128.png"
    }
  },
  "icons": {
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
